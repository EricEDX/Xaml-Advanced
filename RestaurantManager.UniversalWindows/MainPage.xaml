            <DoubleAnimation Storyboard.TargetName="GoToOrderButton"
                             Storyboard.TargetProperty="(Button.RenderTransform).(TranslateTransform.X)"
                             From="{Binding ElementName=MainPage, Path=FirstFrom}"
